{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "skipFiles": ["<node_internals>/**"],
        //"program": "${workspaceFolder}\\app.js",
        "runtimeArgs": [
            "run",
            "test",
            "--config=jest.config.js",
            "--env=jsdom",
            "--runInBand",
            "--debug",
            "--verbose",
            // To debug a specific test file, add the file name;
            // I.E.:
            "ModalFormCrear.test.tsx",
            "ModalFormEditar.test.tsx",
            "apiTiempo.test.tsx"
            ],
            "runtimeExecutable": "npm",
      }
    ]
  }